<div class="container">
  <%= tag.h1 "User一覧" %>
    <table class="table">
      <thead>
        <%= tag.tr %>
          <%= tag.th "名前" %>
          <%= tag.th "メールアドレス" %>
      </thead>

      <tbody>
        <% @user.each do |user| %>
          <%= tag.tr %>
            <%= tag.td user.name %>
            <%= tag.td user.email %>
        <% end %>
      </tbody>
    </table>
</div>
