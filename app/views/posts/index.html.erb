<div class="container">
  <%= tag.h1 "投稿一覧" %>
    <table class="table">
      <thead>
        <%= tag.tr %>
          <%= tag.th "タイトル" %>
          <%= tag.th "本文" %>
      </thead>
      <tbody>
        <% @post.each do |post| %>
          <%= tag.tr %>          
            <%= tag.td link_to(post.title, post_show_path(post.user.id)) %>
            <%= tag.td link_to(post.content, post_show_path(post.user.id)) %>
        <%end%>
      </tbody>
    </table>
</div>